{
    "name": "axelerant/mdtt",
    "description": "Migrated data testing tool",
    "type": "project",
    "authors": [
        {
            "name": "Subhojit Paul",
            "email": "subhojit.paul@axelerant.com",
            "role": "Developer"
        }
    ],
    "require": {
        "ext-mysqli": "*",
        "symfony/console": "^6.0",
        "symfony/yaml": "^6.0",
        "symfony/dependency-injection": "^6.0",
        "symfony/config": "^6.0",
        "symfony/http-kernel": "^6.0",
        "phpunit/phpunit": "^9.5",
        "symfony/dotenv": "^6.0",
        "sendgrid/sendgrid": "^7.11",
        "monolog/monolog": "^2.4"
    },
    "scripts": {
        "php-cs": "./vendor/bin/phpcs src --standard=PSR2",
        "php-cs-fixer": "./vendor/bin/php-cs-fixer fix src",
        "phpstan": "./vendor/bin/phpstan analyse src --level max",
        "test": "composer php-cs && composer phpstan"
    },
    "autoload": {
        "psr-4": {
            "Mdtt\\": "src"
        },
        "classmap": ["src"]
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan": "^1.4",
        "friendsofphp/php-cs-fixer": "^3.7"
    },
    "bin": [
        "bin/mdtt"
    ]
}
